{
  "name": "cryptfolio",
  "version": "0.0.1",
  "description": "A command-line application for checking cryptocurrency prices",
  "author": "0xReplicant <zeroxreplicant@icloud.com>",
  "repository": "https://github.com/0xReplicant/cryptfolio",
  "license": "MIT",
  "keywords": [
    "typescript",
    "bitcoin",
    "cryptocurrency",
    "esbuild"
  ],
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "bin": {
    "cryptfolio": "./dist/cli.js"
  },
  "scripts": {
    "build": "yarn clean && yarn build:ts && yarn build:node",
    "build:ts": "tsc -p tsconfig.json",
    "build:node": "esbuild src/cli.ts --bundle --platform=node --minify --sourcemap=external --outfile=dist/cli.js",
    "build:node:dev": "esbuild src/cli.ts --bundle --sourcemap=external --outfile=dist/cli.js",
    "build:node:watch": "esbuild src/cli.ts --bundle --watch --sourcemap=external --outfile=dist/cli.js",
    "clean": "rimraf coverage dist docs",
    "cli": "ts-node src/cli.ts",
    "docs": "typedoc --entryPoints src/main.ts",
    "format": "eslint src/ --ext .ts . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "prepare": "husky install",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "lint-staged": {
    "*.ts": ["eslint --fix", "prettier --write"]
  },
  "devDependencies": {
    "@types/jest": "^26.0.21",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "esbuild": "^0.11.11",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.2.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.35",
    "typescript": "^4.2.3"
  }
}
